@using DoAnWeb.Models
@model List<Giohang>
@{
    ViewBag.Title = "GIỎ HÀNG";
    Layout = "~/Views/Shared/_LayoutGioHang.cshtml";
}
<br />
<br />
<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight: bold">
        <td> MÃ SẢN PHẨM</td>
        <td> TÊN SẢN PHẨM</td>
        <td> HÌNH ẢNH</td>
        <td> SỐ LƯỢNG</td>
        <td> ĐƠN GIÁ</td>
        <td> THÀNH TIỀN</td>
        <td width="70"> </td>
        <td width="70"></td>
        <td width="70"></td>
    </tr>
    @foreach (var Banh in Model)
    {
     <tr style="text-align:center; font-weight: bold">
            <td>@Banh.iMasp</td>
            <td>@Banh.sTensanpham</td>
            <td><img src="~/images/@Banh.sAnh" width="250" height="250" /> </td>

            @using (Html.BeginForm("Capnhat", "Giohang", new { id = Banh.iMasp }))
            {
            <td><input type="number" min="1" value="@Banh.iSoluong" name="txtSoluong" size="5" /></td>

            <td>@String.Format("{0:0,0}", Banh.dGia)</td>
            <td>@String.Format("{0:0,0}", Banh.dThanhtien)</td>
            <td><a href="@Url.Action("Details", "BanhKeo", new { id = Banh.iMasp })">XEM CHI TIẾT</a> </td>
            <td><a href="@Url.Action("Xoasanpham", "Giohang", new { id = Banh.iMasp })">XÓA</a></td>
            <td> <input type="submit" value="CẬp NHẬT" /></td>
            }
    </tr>

    }
    <tr style="text-align:right; font-weight: bold ; color:black">
        <td colspan="5">SỐ LƯỢNG SẢN PHẨM: @ViewBag.Tongsoluong </td>
        <td colspan="4">SỐ TIỀN CẦN THANH TOÁN:@String.Format("{0:0,0}", ViewBag.Tongtien) VND </td>
    </tr>
    <tr style="text-align:right; font-weight: bold ; color:black">
        <td colspan="9"><a href="@Url.Action("Xoatatcagiohang", "BanhKeo")" onclick="alert('Xoá Tất Cả Hàng Thành Công') >XÓA TOÀN BỘ GIỎ HÀNG</a></td>
    </tr>
    <tr style="text-align:right; font-weight: bold ; color:black">
        <td colspan="9"><a href="@Url.Action("Dathang", "Giohang")" onclick="alert('Đặt Hàng Thành Công') class="btn btn-secondary btn-sm">ĐẶT HÀNG</a></td>
    </tr>
</table>


